                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    @*<li>@Html.ActionLink("Search", "About", "Home")</li>*@
                    @*<li><a href="~/ProductTables" class="elements"><span>Search</span></a></li>*@
                    <li>@Html.ActionLink("Search", "Index", "ProductTable")</li>
                    <li>@Html.ActionLink("Profile", "Contact", "Home")</li>
                </ul>
                <div id="partialLoginContainer">@Html.Partial("_LoginPartial", new { id = "thePartialLoginView" }) </div>
            </div>
        </div>
    </div>
    <br />
    <div class="container body-content">
        <h1 style="text-align: center">@ViewBag.Title</h1>
        @RenderBody()

        <div style="position: fixed; bottom: 0; ">
            @*<hr style="text-align: center; position: relative; left: -20%; width: 1000%; top: 150px; "/>*@
